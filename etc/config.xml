<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <adeelq_abandoned_configuration>
            <abandoned_cart>
                <duration>60</duration>
                <consented>1</consented>
                <email_sender>support</email_sender>
                <template>adeelq_abandoned_configuration_abandoned_cart_template</template>
            </abandoned_cart>
            <discount_code>
                <enabled>0</enabled>
                <percentage>10</percentage>
                <expiration_time>24</expiration_time>
                <prefix>CART</prefix>
            </discount_code>
        </adeelq_abandoned_configuration>
    </default>
</config>
